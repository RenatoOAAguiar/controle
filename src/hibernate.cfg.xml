<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">renato</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/estoque</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.default_schema">estoque</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <mapping class="br.com.estoque.model.Produto"/>
        <mapping class="br.com.estoque.model.Funcionario"/>
        <mapping class="br.com.estoque.model.Fornecedor"/>
        <mapping class="br.com.estoque.model.Cargo"/>
        <mapping class="br.com.estoque.model.Permissao"/>
        
        
    </session-factory>
</hibernate-configuration>
